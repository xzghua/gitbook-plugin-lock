{
  "name": "gitbook-plugin-lock",
  "version": "0.0.83",
  "description": "Gitbook 页面加锁",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xzghua/gitbook-plugin-lock.git"
  },
  "keywords": [
    "gitbook",
    "plugin",
    "lock",
    "page-lock",
    "wechat"
  ],
  "author": "xzghua",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xzghua/gitbook-plugin-lock.git/issues"
  },
  "homepage": "https://github.com/xzghua/gitbook-plugin-lock.git#readme",
  "engines": {
    "gitbook": "*"
  },
  "gitbook": {
    "properties": {
      "lockTokenKey": {
        "description": "存到本地的token key",
        "required": false,
        "type": "string"
      },
      "articleHeightPercent": {
        "description": "你想给别人看到文章的高度",
        "required": false,
        "type": "number"
      },
      "wechatName": {
        "description": "公众号的名称",
        "required": true,
        "type": "string"
      },
      "wechatQr": {
        "description": "公众号图",
        "required": true,
        "type": "string"
      },
      "verificationCode": {
        "description": "回复的关键字",
        "required": true,
        "type": "array"
      },
      "allPage": {
        "description": "是否所有页面都适用",
        "required": false,
        "type": "bool"
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
